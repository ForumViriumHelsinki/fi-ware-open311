<?xml version="1.0" encoding="UTF-8"?>
<Template xmlns="http://wirecloud.conwet.fi.upm.es/ns/template#">
    <Catalog.ResourceDescription>
        <Vendor>ForumViriumHelsinki</Vendor>
        <Name>Open311Map</Name>
        <DisplayName>Open311Map</DisplayName>
        <Version>1.0.1</Version>
        <Author>Juho Vuori</Author>
        <Mail>juho.vuori@codento.com</Mail>
        <Description>Test widget to display Open311 issues on a map</Description>
        <ImageURI>images/widget_image.png</ImageURI>
        <iPhoneImageURI>images/widget_image.png</iPhoneImageURI>
        <WikiURI></WikiURI>
        
        <Requirements>
            <Feature name="NGSI"/>
        </Requirements>

    </Catalog.ResourceDescription>
    <Platform.Preferences>
    </Platform.Preferences>
    <Platform.StateProperties>
    </Platform.StateProperties>
    <Platform.Wiring>
        <OutputEndpoint
            name="selectedEntity"
            type="text"
            description="Data of the selected issue marker"
            label="Data of the selected issue marker"
            action_label="Data of the selected issue marker"
            friendcode="open311Entity"/>
    </Platform.Wiring>
    <Platform.Link>
        <XHTML href="index.html" contenttype="text/html" cacheable="false" use-platform-style="true"/>
    </Platform.Link>
    <Platform.Rendering width="5" height="20"/>
</Template>
